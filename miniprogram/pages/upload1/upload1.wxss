/* pages/sign/sign.wxss */
Page{
  background-color: #fff;

}
.avatar_box{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
  position: relative;
}
.bindchooseavatar{
  position: absolute;
  top: 20rpx;
  width: 100%;
  opacity: 0;
}
.calendar {
  --calendar-height: 518px;
}
.avatar_box image{
  width: 120rpx;
  height: 120rpx;
}
.avatar_box .int{
  font-size: 9pt;
  color: #7f7f7f;
  margin-top: 10rpx;
}

.submit .item image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.submit .item{
  display: flex;
  border: 1rpx solid gray;
  padding: 10rpx;
  border-radius: 10rpx;
  margin: 20rpx 20rpx;

}
.back_box{
  display: flex;
  margin-top: 80rpx;
  font-weight: bold;
  font-size: 10pt;
  margin-left: 30rpx;
}
.back_box .back{
  color: #0066FF;
  margin-left: 10rpx;
}
input{
  width: 100%;
}
page{
  background-color: #F5F5F5;
}

.post-sale-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.post-sale-container .post-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  background: white;
  border-radius: 10rpx;
}

.post-sale-container .post-header{
  display: flex;
  flex-direction: row;
  width: 100%;
  justify-content: center;
}

.image-form{
  width: 95%;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.post-header .left{
  width: 40%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.left .remove-image{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  z-index: 10;
  margin-left: -50rpx;
}

.post-header .right{
  display: flex;
  flex-direction: column;
  width: 95%;
}

input{
  border-bottom-style:solid;
  border-width:1rpx;
  border-color: #E8E8E8;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.right .gender{
  border-bottom-style:solid;
  border-width:1rpx;
  border-color: #E8E8E8;
}
.post-content{
  display: flex;
  flex-direction: column;
  width: 100%;
  font-size: 35rpx;
}

.post-content .like{
  margin-left: 15rpx;
  margin-right: 15rpx;
}

.post-content .introduce{
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-top: 20rpx;
}


.button-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 80rpx;
  align-items: center;
  text-align: center;
}

.button-container .button{
  background: white;
  width: 95%;
  padding: 10rpx 10rpx;
}
button{
  background: #66CDAA;
  color: white;
  width: 95%;
}

.tips{
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 80rpx;
  align-items: center;
}

.tips .warming{
  color: darkgray;
  width: 95%;
  font-size: 35rpx;
}
.cu-form-group {
  margin-top: 10px; /* 可以根据需要调整上边距的大小 */
}
